<html>
  <head><title>Informations sur le serveur</title></head>
  <body>
    <h1>Informations sur le serveur</h1>
    <p>Hostname: {{ ansible_hostname }}</p>
    <p>FQDN : {{ ansible_fqdn }}</p>
    <p>IPv4 NIC : {{ ansible_default_ipv4.address }}</p>
    <p>Points de montage :</p>
    <ul>
    {% for mount in ansible_mounts %}
      <li>{{ mount.mount }} ({{ mount.size_total | int / 1024 / 1024 }} Mo)</li>
    {% endfor %}
    </ul>
  </body>
</html>
